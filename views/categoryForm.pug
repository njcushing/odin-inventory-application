extends layout

block content
  h1= title

  form(action="" method="POST")
    div.form-group
      label(for="name") Name:
      input.form-control(type="text" id="name" name="name" required="true" value=category ? category.name : "")
      br
      label(for="description") Description:
      textarea.form-control(id="description" name="description" ) #{value=category ? category.description : ""}
    button.btn.btn-primary(type="submit" class="basic-textarea") #{value=buttonText ? buttonText : "Submit"}
  
  if(errors)
    br
    h5 Warning: 
    ul
      each error in errors
        li= error.msg