extends layout

block content
  h1= title

  form(action="" method="POST")
    div.form-group
      label(for="name") Name:
      input.form-control(type="text" id="name" name="name" required="true" value=category ? category.name : "")
      br
      label(for="description") Description:
      textarea.form-control(id="description" name="description" ) #{category ? category.description : ""}
      hr
      | Please insert the administrator's password before submitting this action:
      input.form-control(type="password" id="password" name="password" value=password ? password : "")
      hr
    button.btn.btn-primary(type="submit") #{value=buttonText ? buttonText : "Submit"}
  
  if(errors)
    br
    h5 Warning: 
    ul
      each error in errors
        li= error.msg